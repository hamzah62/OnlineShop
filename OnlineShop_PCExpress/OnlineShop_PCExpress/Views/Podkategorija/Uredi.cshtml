@{
    ViewData["Title"] = "Uredi";
    List<SelectListItem> lista = ViewBag.Kategorije as List<SelectListItem>;
}
@using ClassLibrary1.ViewModels;

@model PodkategorijaPrikazVM;

<br />
<form ajax-poziv="da" ajax-rezultat="ajax" class="form-group" asp-action="Uredi" asp-controller="Podkategorija" enctype="multipart/form-data">

    <label for="Naziv">Naziv</label>
    <input class="form-control" asp-for="Naziv" /><br />

    <select asp-for="Kategorija_.Value" asp-items="lista">
        
    </select>


    <input class="btn btn-success" type="submit" value="Submit" /><br />
</form>